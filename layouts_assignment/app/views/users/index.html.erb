<% content_for :left_column do %>
    <h1> All Users </h1>
    <table style="width:100%">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Favorite Language</th>
        </tr>
        <% @users.each do |user| %>
        <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.favorite_language %></td>
        </tr>
        <% end %>
    </table>    
<% end %>
<% content_for :right_column do %>
    <h1> New User </h1>
    <form action="/users" method='post'>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <div>
            <label for="fname">First name:</label><br>
            <input class = "space" type="text" id="fname" name="user[first_name]"><br><br>
            <label for="lname">Last name:</label><br>
            <input class = "space" type="text" id="lname" name="user[last_name]"><br><br>
            <label for="flanguage">Favorite language:</label><br>
            <input class = "space" type="text" id="flanguage" name="user[favorite_language]"><br><br>
        </div>    
        <input class="submit-btn" type="submit" value="Submit" name="create user"><br>
        <br>
        <a href="/posts" ><button class="post-btn" type="submit" value="ALL Posts">ALL Post</button></a>
    </form> 
<% end %>   