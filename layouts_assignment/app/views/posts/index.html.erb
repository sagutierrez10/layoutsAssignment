<% content_for :left_column do %>
    <h1>All Posts</h1>
    <table>
        <thead>
            <th>Title</th>
            <th>Content</th>
            <th>Author</th>
        </thead>
        <tbody>
        <% @posts.each do |post| %>
            <tr>
                <td><%= post.title %></td>
                <td><%= post.content %></td>
                <td><%= "#{post.user.first_name} #{post.user.last_name}" %></td>
            </tr>
        <% end %>
    </tbody>
    </table>
<% end %>

<% content_for :middle_column do %>
    <h1>New Post</h1>
    <form action="/posts" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" name="post[title]">
        </div>
        <div class="form-group">
            <label for="content">Content</label>
            <textarea class="form-control" rows="5" id="content" name="post[content]"></textarea><br><br>
        </div>
        <div class="form-group">
            <label for="author">Author</label>
            <select id="author" name="post[user_id]">
            <% @users.each do |user| %>
                <option value="<%= user.id %>"><%= user.first_name%> <%= user.last_name %></option>  
            <% end %>
            </select>
        </div>
        <br><br>
        <input type="submit" class="submit-btn" name="Create Post">
    </form>
<% end %>
<% content_for :right_column do %>
    <h2>Go to Users Page</h2>
    <a href="/users" ><button class="post-btn" type="submit" value="ALL Users">ALL Users</button></a>
<% end %>
